{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CUDA STF Tutorial",
            "type": "shell",
            "command": "nvcc",
            "args": [
                "-std=c++17",
                "-expt-relaxed-constexpr",
                "--extended-lambda",
                "-I${workspaceFolder}/cccl/libcudacxx/include",
                "-I${workspaceFolder}/cccl/cudax/include",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-arch=sm_86",
                "-lcuda"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build current CUDA file with STF support"
        },
        {
            "label": "Build and Run CUDA STF Tutorial",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "nvcc -std=c++17 -expt-relaxed-constexpr --extended-lambda -I${workspaceFolder}/cccl/libcudacxx/include -I${workspaceFolder}/cccl/cudax/include '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' -arch=sm_86 -lcuda && CUDA_VISIBLE_DEVICES=0 '${fileDirname}/${fileBasenameNoExtension}'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build and run current CUDA file with STF support"
        }
    ]
}
