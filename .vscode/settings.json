{
    // C++ IntelliSense 配置
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.intelliSenseEngineFallback": "enabled",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.dimInactiveRegions": true,
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.suggestSnippets": true,
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.default.compilerPath": "/usr/local/cuda/bin/nvcc",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c17",
    
    // CUDA 相关配置
    "files.associations": {
        "*.cu": "cuda-cpp",
        "*.cuh": "cuda-cpp",
        "*.h": "c",
        "*.hpp": "cpp",
        "*.cpp": "cpp",
        "*.cc": "cpp",
        "*.cxx": "cpp"
    },
    
    // 代码格式化
    "C_Cpp.formatting": "vcFormat",
    "C_Cpp.vcFormat.indent.braces": false,
    "C_Cpp.vcFormat.indent.multiLineRelativeToOpeningBrace": false,
    "C_Cpp.vcFormat.indent.preserveIndentationInComments": true,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.vcFormat.space.beforeFunctionOpenParenthesis": "remove",
    
    // 编辑器设置
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [100, 120],
    
    // 文件搜索排除
    "search.exclude": {
        "**/build": true,
        "**/dist": true,
        "**/.git": true,
        "**/.vscode/browse.vc.db*": true,
        "**/node_modules": true
    },
    
    // 文件监视排除
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/build/**": true,
        "**/.vscode/browse.vc.db*": true
    }
}
